<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="114dp"
            android:layout_height="82dp"
            android:translationX="150dp"
            android:translationY="-250dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="Connexion"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"
            android:translationY="-300dp" />


        <Button
            android:id="@+id/btn"
            android:layout_width="158dp"
            android:layout_height="80dp"
            android:background="#25E6AA"
            android:fontFamily="sans-serif-medium"
            android:text="Se connecter"
            android:textColor="#000000"
            android:translationY="120dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:background="@drawable/box"
        android:orientation="vertical"
        android:translationX="0dp"
        android:translationY="320dp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="100dp">

        <TextView
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0029315F"
            android:ems="10"
            android:inputType="textPersonName"
            android:shadowColor="#00BD7272"
            android:text="Votre identifiant : "
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:translationX="45dp"
            android:translationY="0dp" />

        <EditText
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="Idendifiants"
            android:inputType="textPersonName"
            android:paddingTop="10sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textColorHint="#9C9494"
            android:textSize="17sp"
            android:translationY="0dp" />

        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="5sp"
            android:text="Mots de passe :"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:translationX="45dp"
            android:translationY="0dp" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="Mots de passe"
            android:inputType="textPassword"
            android:paddingTop="10sp"
            android:textColor="#FAFAFA"
            android:textColorHint="#9C9999"
            android:textSize="16sp"
            android:translationY="0dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>